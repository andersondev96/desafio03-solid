generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String   @id @default(uuid())
  responsible   String
  email         String   @unique
  cep           String
  address       String
  latitude      Decimal
  longitude     Decimal
  whatsapp      String?
  password_hash String
  created_at    DateTime @default(now())

  Pet Pet[]

  @@map("organizations")
}

model Pet {
  id               String   @id @default(uuid())
  name             String
  description      String
  year             Int
  size             String
  energy           Int
  independence     String
  wide_environment Boolean
  requirements     String[]
  images           String[]
  created_at       DateTime @default(now())

  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String

  @@map("pets")
}
